{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "/src",
    "paths": {
      "@app/*": [ "src/*" ]
    },
    "moduleResolution": "node"
  },
  "exclude": [
    "./app/**/*.ts",
    "./dist/**/*.ts"
  ],
  "lib": [
    "dom"
  ]
}
